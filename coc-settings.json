{
  "tsserver.npm": "/usr/local/bin/npm",
  "javascript.showUnused": true,
  "coc.preferences.formatOnType": true,
  "coc.preferences.formatOnSaveFiletypes": [
    "dart",
    "css",
    "yml",
    "typescript",
    "javascript",
    "html",
    "html5"
  ],
  "prettier.singleQuote": true,
  "prettier.trailingComma": "none",
  "explorer.width": 30,
  "explorer.icon.enableNerdfont": true,
  "explorer.previewAction.onHover": false,
  "explorer.keyMappings": {
    "o": ["expandable?", "expand", "open"],
    "v": "open:vsplit"
  },

  "html.enable": true,
  "html.filetypes": ["html", "handlebars", "blade"],
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "html.format.enable": true,
  "html.autoClosingTags": true,
  "html.suggest.html5": true,
  "emmet.showExpandedAbbreviation": "always",
  "emmet.showAbbreviationSuggestions": true,

  "tailwindCSS.enable": true,
  "tailwindCSS.emmetCompletions": true,
  "tailwindCSS.includeLanguages": {
    "handlebars": "html",
    "plainText": "html"
  },
  "explorer.keyMappings.global" : {
    "t": "open:tab"
  },
  "flutter.lsp.initialization.closingLabels": true,
  "tsserver.implicitProjectConfig.experimentalDecorators": true
}
